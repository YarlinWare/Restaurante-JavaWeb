CREATE TABLE usuario
(
    idUsuario INT NOT NULL,
    idPerfil INT NOT NULL,
    nombres VARCHAR(30),
    apellidos VARCHAR(30),
    correo VARCHAR(30),
    celular VARCHAR(10),
    password VARCHAR(30),
    PRIMARY KEY (idUsuario),
    INDEX (idPerfil),
    FOREIGN KEY (idPerfil) REFERENCES perfil(idPerfil)
)







+ Perfil
- idPerfil
- Cliente
- Empleado

+ FormaPago
IdFormaPago
