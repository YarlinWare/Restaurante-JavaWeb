Estado



+ Usuarios
DatosBasicos
-idPerfil
Estado

CREATE TABLE productos 
(
    idProducto INT NOT NULL,
    idCategoria INT NOT NULL,
    nombre VARCHAR(30),
    descripcion TEXT,
    valor INT(30),
    estado BOOLEAN,
    password VARCHAR(30),
    INDEX (idProducto),
    PRIMARY KEY (idProducto),
    FOREIGN KEY (idCategoria) REFERENCES categoria(idCategoria)
) TYPE = INNODB;

+ Productos (Menu)
