Estado



+ Usuarios
DatosBasicos
-idPerfil
Estado

CREATE TABLE productos 
(
    idProducto INT NOT NULL,
    nombre VARCHAR(30),
    descripcion TEXT,
    valor INT(30),
    estado BOOLEAN,
    password VARCHAR(30),
    INDEX (idProducto),
   	PRIMARY KEY (idProducto)
) TYPE = INNODB;

+ Productos (Menu)
IdProducto
Nombre
Descripci√≥n
Valor
Estado

CREATE TABLE pedido 
(
    idPedido INT NOT NULL,    
    idUsuario INT NOT NULL,
    Fecha DATE,
    Mesa INT,
    estado BOOLEAN,
   	PRIMARY KEY (idPedido),
   FOREIGN KEY (idUsuario) REFERENCES usuario(idUsuario)
);


+ Pedido
IdPedido
Fecha
Mesa
Usuario (Empleado - Mesero)
Estado


CREATE TABLE pedido_detalle
(
    idPedido INT NOT NULL,    
    idDetalle INT NOT NULL,  
    idProducto INT NOT NULL,
    cantidad INT,
    estado BOOLEAN,
   	PRIMARY KEY (idDetalle),
    FOREIGN KEY (idPedido) REFERENCES pedido(idPedido),
    FOREIGN KEY (idProducto) REFERENCES productos(idProducto)
);

+ PedidoDetalle
IdDetalle
IdPedido
IdProducto
Cantidad
Estado

CREATE TABLE factura
(
    idFactura INT NOT NULL,    
    idPedido INT NOT NULL,  
    fecha DATE,
    valorNeto INT(11),
    valorTotal INT(11),    
    propina INT(11),
    iva INT(11),
    estado BOOLEAN,    
    pago BOOLEAN,
    PRIMARY KEY (idFactura),
    FOREIGN KEY (idPedido) REFERENCES pedido(idPedido)
);

+ Factura
